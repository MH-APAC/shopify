{
    "name": "mh/drupal-project-template",
    "description": "Template for MH Drupal projects.",
    "license": "GPL-2.0+",
    "type": "project",
    "require": {
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/shopify": "^1.0@alpha",
        "drupal/swiftmailer": "^2.2",
        "mh/drupal-core-package": "~1.0.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.moet-hennessy.net:mhis/dynamic/agency/drupal-common/drupal-composer.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.moet-hennessy.net:mhis/dynamic/agency/drupal-common/drupal-configs.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.moet-hennessy.net:mhis/dynamic/agency/drupal-common/drupal-patches.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.moet-hennessy.net:mhis/dynamic/agency/drupal-common/drupal-custom-modules.git"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {},
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "composer/installers": true,
            "drupal/core-project-message": true,
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true,
            "simplesamlphp/composer-module-installer": true,
            "oomphinc/composer-installers-extender": true,
            "phpro/grumphp-shim": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "bin-dir": "bin",
        "discard-changes": true,
        "platform-check": false,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "conf": [
                "type:drupal-custom-configuration"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "patches/mh": [
                "type:drupal-custom-patches"
            ],
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/modules/mh": [
                "type:drupal-custom-modules"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "installer-types": [
            "bower-asset",
            "drupal-custom-configuration",
            "drupal-custom-modules",
            "drupal-custom-patches",
            "drupal-library",
            "npm-asset"
        ],
        "merge-plugin": {
            "include": [
                "web/modules/contrib/webform/composer.libraries.json",
                "composer.libraries.json"
            ],
            "merge-extra": false,
            "recurse": false,
            "replace": false
        },
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {},
        "scripts-dev": {}
    },
    "scripts": {}
}
